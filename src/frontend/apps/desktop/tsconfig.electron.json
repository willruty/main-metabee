{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist_electron",
        "rootDir": "electron",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}